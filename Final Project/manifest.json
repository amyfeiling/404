{
  "name": "A browser action with a popup that changes the background and foreground color",
  "description": "Change the current page formatting colors",
  "version": "0.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.google.com/*"],
      "css": ["popup.css"]
    }
  ],
  "browser_action": {
      "default_title": "Set browser's default colors.",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "manifest_version": 2
}